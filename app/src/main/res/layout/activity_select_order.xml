<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- MAIN CONTENT-->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.benutzer.washbayin.activities.SelectOrderActivity">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:id="@+id/select_order_toolbar_layout">
            <include
                android:id="@+id/select_order_toolbar"
                layout="@layout/toolbar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:id="@+id/selectOrderCardId"
            android:layout_below="@+id/select_order_toolbar_layout">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_packaging"
                android:layout_gravity="center_vertical"
                android:id="@+id/imageViewSelectOneId"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearSelectOneId"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1SelectOneId"
                    android:text="Selective"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2SelectOneId"
                    android:layout_gravity="center"
                    android:text="Order"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:id="@+id/selectOrderCardIdTwo"
            android:layout_below="@+id/selectOrderCardId">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_bucket"
                android:layout_gravity="center_vertical"
                android:id="@+id/imageViewSelectTwoId"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearSelectTwoId"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1SelectTwoId"
                    android:text="Common"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2SelectTwoId"
                    android:layout_gravity="center"
                    android:text="Order"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:id="@+id/selectOrderCardIdThree"
            android:layout_below="@+id/selectOrderCardIdTwo">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icon_track"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/imageViewSelectThreeId"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearSelectThreeId"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1SelectThreeId"
                    android:text="Bulk"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2SelectThreeId"
                    android:layout_gravity="center"
                    android:text="Order"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape"
            android:id="@+id/nextingLabelHome">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nextingTextSelect"
                android:text="@string/nextingTextSelect"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/LAAS_ACCENT"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>

    </RelativeLayout>
    <!-- DRAWER CONTENT-->
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/shape"
                android:id="@+id/drawerFragment">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/icon_about"/>
            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/drawerFragment"
                android:id="@+id/drawerList"></ListView>
        </RelativeLayout>

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>