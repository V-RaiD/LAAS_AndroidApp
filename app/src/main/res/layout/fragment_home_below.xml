<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:id="@+id/linearLayoutOneHomeBelowFragBelowId"
        android:background="@color/LAAS_WHITE"
        android:elevation="3dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation='vertical'
            android:layout_marginLeft="55dp"
            android:background="@color/LAAS_WHITE"
            android:layout_marginTop="5dp">
            <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/imageViewLinearLayoutOneHomeFragBelowId"
            android:src="@drawable/icon_washing"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewImageOneTopFragmentHomeLayout"
                android:text="@string/washingHomeLayoutText"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"/>/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation='vertical'
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/LAAS_WHITE"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/imageViewLinearLayoutTwoHomeFragBelowId"
                android:src="@drawable/icon_steampress"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewImageTwoTopFragmentHomeLayout"
                android:text="@string/washingHomeLayoutText"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"/>/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation='vertical'
            android:background="@color/LAAS_WHITE"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/imageViewLinearLayoutThreeHomeFragBelowId"
                android:src="@drawable/icon_dryclean"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewImageThreeTopFragmentHomeLayout"
                android:text="@string/washingHomeLayoutText"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"/>/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:id="@+id/linearLayoutTwoHomeBelowFragBelowId"
        android:layout_margin="10dp"
        android:elevation="3dp"
        android:background="@color/LAAS_WHITE"
        android:layout_below="@+id/linearLayoutOneHomeBelowFragBelowId">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/imageViewLinearLayoutAlphaHomeFragBelowId"
            android:layout_marginLeft="55dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_rate"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLinearLayoutTwoHomeFragBelowId"
                android:layout_marginTop="10dp"
                android:text="@string/homeScreenLLTwoText1"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp"
                android:fontFamily="sans-serif-condensed"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2LinearLayoutTwoHomeFragBelowId"
                android:text="@string/homeScreenLLTwoText2"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>